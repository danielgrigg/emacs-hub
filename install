#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

PREFS_DIR=~/Library/Preferences/Aquamacs\ Emacs
SUPPORT_DIR=~/Library/Application\ Support/Aquamacs\ Emacs

function replace-prefs-file {
  PREF_PATH=$PREFS_DIR/$1
  if [ -e $PREF_PATH ]; then
    mv -f $PREF_PATH $PREF_PATH.old
  fi
  ln -s $SCRIPT_DIR/$2 $PREF_PATH
}

replace-preferences-file Preferences.el preferences.el

git submodule update --init --quiet

